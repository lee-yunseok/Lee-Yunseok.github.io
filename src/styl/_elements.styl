.post-content 
    .tags
        margin-top rem(30px)
        a
            font-size rem(14px)
            color main
            display inline-block
            border 1px solid main
            border-radius rem(5px)
            padding rem(4px) rem(10px)
            margin-right rem(2px)
            margin-bottom rem(8px)
            text-decoration none
            &:hover
                color #fff
                border 1px solid main
                background main
.paginator a
    color main
    border 1px solid main
    border-radius rem(5px)
    padding rem(4px) rem(10px)
    margin-right rem(2px)
    margin-bottom rem(8px)
    text-decoration none
    &:hover
        color #fff
        background main
.paginator .selected a
    color #fff
    border 1px solid darken(main, 40%)
    background darken(main, 40%)
#back-to-top
    background main
.img-rounded
    border-radius 50%
.social-links a
    border none
    &:hover
        color #422342
        background none
.yslider img
    width 100%
    max-width 100%